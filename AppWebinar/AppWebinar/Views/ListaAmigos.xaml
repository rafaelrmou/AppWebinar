<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWebinar.Views.ListaAmigos">

  <ListView HasUnevenRows="True" ItemsSource="{Binding .}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <ViewCell.View>
            <StackLayout Orientation="Vertical" BackgroundColor="Aqua">
              <Label Text="{Binding Nome}" FontSize="30" FontAttributes="Bold" />
              <Label Text="{Binding Cidade}" FontSize="25" />
            </StackLayout>
          </ViewCell.View>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>

</ContentPage>