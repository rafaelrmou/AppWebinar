<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWebinar.Views.Login">

  <StackLayout Orientation="Vertical">
    <Entry Placeholder="Login" Text="{Binding Login, Mode=TwoWay}"></Entry>
    <StackLayout Orientation="Horizontal">
      <Entry Placeholder="Senha" IsPassword="True" Text="{Binding Senha, Mode=TwoWay}"></Entry>
      <Button Text="Login" Clicked="btnClickLogin"></Button>
    </StackLayout>
  </StackLayout>

</ContentPage>